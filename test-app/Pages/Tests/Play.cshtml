@page
@model test_app.Pages.Tests.PlayModel
@{
    ViewData["Title"] = "Jugar Test";
}

<div class="container mt-5">
    <h2 class="text-center">Jugar: @Model.Test.Title</h2>

    <!-- Mensaje de resultado -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    <form method="post" class="card p-4 shadow-sm">
        @for (var i = 0; i < Model.Questions.Count; i++)
        {
            <div class="mb-3">
                <p><strong>@Model.Questions[i].Text</strong></p>
                <input type="hidden" name="QuestionIds[@i]" value="@Model.Questions[i].Id" />
                <input type="text" name="UserAnswers[@i]" class="form-control" required />
            </div>
        }

        <button type="submit" class="btn btn-primary w-100">Enviar Respuestas</button>
    </form>

    <a asp-page="/Index" class="btn btn-secondary mt-3">Volver al Inicio</a>
</div>
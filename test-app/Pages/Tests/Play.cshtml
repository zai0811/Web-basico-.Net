@page
@model test_app.Pages.Tests.PlayModel
@{
    ViewData["Title"] = "Jugar Test";
}

<h2>Jugar Test: @Model.Test.Title</h2>

<!-- âœ… Mostrar mensaje de resultado -->
@if (TempData["Message"] != null)
{
    <div style="color: green; font-weight: bold;">
        @TempData["Message"]
    </div>
}

<form method="post">
    @for (var i = 0; i < Model.Questions.Count; i++)
    {
        <p><strong>@Model.Questions[i].Text</strong></p>
        <input type="hidden" name="QuestionIds[@i]" value="@Model.Questions[i].Id" />
        <label>Respuesta:</label>
        <input type="text" name="UserAnswers[@i]" required />
    }

    <button type="submit">Enviar Respuestas</button>
</form>

<a href="/Index">Volver al Inicio</a>

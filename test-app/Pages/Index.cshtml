@page
@model test_app.Pages.IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-5">
    <h2 class="text-center">¡Bienvenido @User.Identity.Name!</h2>
    <p class="text-center">Aquí puedes administrar tus tests.</p>

    <div class="text-center mb-4">
        <a class="btn btn-primary" asp-page="/Tests/Create">Crear un Nuevo Test</a>
    </div>

    <h4 class="mt-5">Tus Tests Creados</h4>
    <ul class="list-group">
        @foreach (var test in Model.Tests)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @test.Title
                <div>
                    <a class="btn btn-sm btn-warning" asp-page="/Tests/Play" asp-route-id="@test.Id">Jugar</a>
                    <a class="btn btn-sm btn-info" asp-page="/Tests/Edit" asp-route-id="@test.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-page="/Tests/Delete" asp-route-id="@test.Id">Eliminar</a>
                </div>
            </li>
        }
    </ul>
</div>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - test_app</title>
    
    <!-- ✅ Agregando Bootstrap desde CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">test_app</a>
            <div class="navbar-nav">
                <a class="nav-link" asp-page="/Index">Home</a>
                <a class="nav-link" asp-page="/Privacy">Privacy</a>
            </div>
        </div>
    </header>
    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-4">
        <p>&copy; 2025 - test_app - <a asp-page="/Privacy">Privacy</a></p>
    </footer>
</body>
</html>
